<tr>
    <th colspan="2">
        <input type="button"value="+"onclick="performop(this.value);"/>\
        <input type="button"value="-"onclick="performop(this.value);"/>
        <input type="button"value="*"onclick="performop(this.value);"/>
        <input type="button"value="/"onclick="performop(this.value);"/></th>
      </th>  
    </tr>
    <th>result</th>
    <td><input type="number" name="res" id="res" readonly /></td>
</tr>
    </table>
    <script>
        function performop(op)
        var n1= parselnt(document.getElementById("num1").value);
        var n2= parselnt(document.getElementById("num2").value);
        if(op=="+")
        {
            result=n1+n2;
        }
       else if(op=="-")
        {
            result=n1-n2;
        }
       else if(op=="*")
        {
            result=n1*n2;
        }
    else(op=="/")
        {
            result=n1/n2;
        }
    </script>
